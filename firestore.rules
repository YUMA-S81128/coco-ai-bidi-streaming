rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ユーザーが認証済みであり、かつ指定されたユーザーIDと一致するか確認する
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // chats コレクション
    match /chats/{chatId} {
      // 読み取り: 既存ドキュメントの所有者であればアクセス可能
      allow read: if isOwner(resource.data.userId);
      
      // messages サブコレクション
      match /messages/{messageId} {
        // 読み取り: 親の chat ドキュメントの所有者であれば許可
        // get() を使用して親の chat ドキュメントを取得
        allow read: if isOwner(get(/databases/$(database)/documents/chats/$(chatId)).data.userId);
      }
    }

    // image_jobs コレクション
    match /image_jobs/{jobId} {
      // 読み取り: 既存ドキュメントの所有者であればアクセス可能
      allow read: if isOwner(resource.data.userId);
    }
  }
}
