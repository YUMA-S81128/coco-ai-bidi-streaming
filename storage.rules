rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ユーザーが認証済みであり、かつ指定されたユーザーIDと一致するか確認する
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }


    // ユーザー固有の生成画像ディレクトリへのアクセスを許可する
    // パス構成: generated_images/{userId}/{filename}
    match /generated_images/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
    }
  }
}
